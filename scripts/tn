#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

chmod +x "$SCRIPT_DIR/utils/print-colored.sh"
source "$SCRIPT_DIR/utils/print-colored.sh"

case "$1" in
    up)
        chmod +x "$SCRIPT_DIR/up/up.sh"
        exec "$SCRIPT_DIR/up/up.sh"
        ;;
    down)
        chmod +x "$SCRIPT_DIR/down/down.sh"
        exec "$SCRIPT_DIR/down/down.sh"
        ;;
    clean)
        chmod +x "$SCRIPT_DIR/clean/clean.sh"
        exec "$SCRIPT_DIR/clean/clean.sh"
        ;;
    help|"")
        chmod +x "$SCRIPT_DIR/help/help.sh"
        exec "$SCRIPT_DIR/help/help.sh"
        ;;
    *)
        printColor "$RED" "Error: Unknown command '$1'"
        echo ""
        printColor "$BLUE" "Run './scripts/tn help' for usage information"
        exit 1
        ;;
esac
